# Development environment configuration

# Allow external hosts (dev tunnels, network access)
# This is CRITICAL for dev tunnel access
DANGEROUSLY_DISABLE_HOST_CHECK=true

# Bind to all network interfaces
HOST=0.0.0.0

# Disable WebSocket for hot reload when using dev tunnels
# Hot reload won't work over tunnel, but the app will load correctly
FAST_REFRESH=false

# API URL (uses proxy by default)
# REACT_APP_API_URL=http://localhost:5000
