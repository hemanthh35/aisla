# MongoDB Atlas connection string
# Format: mongodb+srv://<username>:<password>@<cluster>/<database>
MONGO_URI=your_mongodb_connection_string_here

# JWT secret key (use a strong random string in production)
JWT_SECRET=your_jwt_secret_key_here

# Server port
PORT=5000

# Google API Key (if using Google services)
# Get your API key from: https://console.cloud.google.com/
GOOGLE_API_KEY=your_google_api_key_here

# Gemini API Key (for AI Chat - Cloud Provider)
# Get your API key from: https://aistudio.google.com/apikey
# This enables the admin to switch to cloud AI when Ollama is unavailable
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama Configuration (for local AI - Offline Provider)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:4b

# SendGrid Configuration (for email notifications)
# Get your API key from: https://sendgrid.com/
# This is required for sending experiment notifications to students
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@aisla.com

# Client URL (for email links)
CLIENT_URL=http://localhost:3000
